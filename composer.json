{  
    "name": "slimdash/slim-payum",
    "type": "project",
    "description": "Simple payment RESTful API implemented with slim and payum", 
    "homepage": "http://slimdash.org",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": [
        {
            "url": "https://github.com/slimdash/core.git",
            "type": "git"
        },
        {
            "url": "https://github.com/slimdash/php-helpers.git",
            "type": "git"
        }, 
        {
            "url": "https://github.com/slimdash/payum-payeezy.git",
            "type": "git"
        }, 
        {
            "url": "https://github.com/thephpleague/omnipay-firstdata",
            "type": "git"
        }
    ],

    "require": {
        "php" : "^5.5 || ^7.0",
        "illuminate/database": "^5.3",
        "monolog/monolog": "^1.21",
        "payum/core": "^1.3",
        "payum/offline": "^1.3",
        "payum/omnipay-bridge": "^1.2",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.1",
        "slimdash/core": "dev-master",
        "slimdash/payum-payeezy": "dev-master",
        "vlucas/phpdotenv": "^2.4",
        "php-http/guzzle6-adapter": "^1.1",
        "robmorgan/phinx": "^0.6.5",

        "omnipay/2checkout": "~2.0",
        "omnipay/authorizenet": "~2.0",
        "omnipay/buckaroo": "~2.0",
        "omnipay/cardsave": "~2.0",
        "omnipay/coinbase": "~2.0",
        "omnipay/common": "~2.3",
        "omnipay/dummy": "~2.0",
        "omnipay/eway": "~2.0",
        "omnipay/firstdata": "dev-master",
        "omnipay/gocardless": "~2.0",
        "omnipay/manual": "~2.0",
        "omnipay/migs": "~2.0",
        "omnipay/mollie": "~3.0",
        "omnipay/multisafepay": "~2.0",
        "omnipay/netaxept": "~2.0",
        "omnipay/netbanx": "~2.0",
        "omnipay/payfast": "~2.0",
        "omnipay/payflow": "~2.0",
        "omnipay/paymentexpress": "~2.0",
        "omnipay/paypal": "~2.0",
        "omnipay/pin": "~2.0",
        "omnipay/sagepay": "~2.0",
        "omnipay/securepay": "~2.0",
        "omnipay/stripe": "~2.0",
        "omnipay/targetpay": "~2.0",
        "omnipay/worldpay": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "mockery/mockery": "^0.9.5",
        "phpunit/dbunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AppMain\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
